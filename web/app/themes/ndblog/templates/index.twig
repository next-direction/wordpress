<!doctype html>

<html lang="de">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{% block title %}{{ site.title }}{% endblock %}</title>
        <meta name="description" content="{{ site.description }}">
        <meta name="author" content="Manuel Hesselbarth">

        {% block ogMeta %}
            <meta property="og:title" content="{{ site.title }}">
            <meta property="og:type" content="website">
            <meta property="og:url" content="{{ site.url }}">
            <meta property="og:description" content="{{ site.description }}">
        {% endblock %}

        <link rel="icon" href="app/themes/ndblog/assets/images/favicon.png">

        <link rel="stylesheet" href="app/themes/ndblog/assets/css/main.min.css">
        <script src="app/themes/ndblog/assets/js/index.js" defer></script>
        {% block scripts %}{% endblock %}
    </head>

    <body>
        <div id="myDiv">
            My first Timber theme
        </div>
    </body>
</html>